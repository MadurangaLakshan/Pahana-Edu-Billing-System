<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<filter-name>AuthFilter</filter-name>
  	<display-name>AuthFilter</display-name>
  	<description></description>
  	<filter-class>com.pahana.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AuthFilter</filter-name>
  	<url-pattern>/views/*</url-pattern>
  </filter-mapping>
  <servlet>
  	<servlet-name>UserController</servlet-name>
  	<display-name>UserController</display-name>
  	<description></description>
  	<servlet-class>com.pahana.controller.UserController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CustomerController</servlet-name>
  	<display-name>CustomerController</display-name>
  	<description></description>
  	<servlet-class>com.pahana.controller.CustomerController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ItemController</servlet-name>
  	<display-name>ItemController</display-name>
  	<description></description>
  	<servlet-class>com.pahana.controller.ItemController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>UserController</servlet-name>
  	<url-pattern>/UserController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CustomerController</servlet-name>
  	<url-pattern>/CustomerController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ItemController</servlet-name>
  	<url-pattern>/ItemController</url-pattern>
  </servlet-mapping>
</web-app>
